<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.daffafzn.belajarmembaca.MainActivity">

    <ImageButton
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:background="@drawable/logo"
        android:layout_above="@+id/button_belajar"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo" />

    <TextView
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <ImageButton
        android:id="@+id/button_belajar"
        android:layout_width="241dp"
        android:layout_height="69dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-46dp"
        android:background="@drawable/buttonbelajar" />

    <ImageButton
        android:id="@+id/button_about"
        android:layout_width="32dp"
        android:layout_height="61dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttonabout" />

    <ImageButton
        android:id="@+id/button_exit"
        android:layout_width="78dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/buttonexit" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/logo"
        android:layout_centerHorizontal="true"
        android:text="by Daffafzn" />


</RelativeLayout>
